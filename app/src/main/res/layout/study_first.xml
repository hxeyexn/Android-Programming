<?xml version="1.0" encoding="utf-8"?>

<!-- 첫번째 스터디 레이아웃 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/rectangle_all_corner_radius"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="15dp"
                    android:src="@drawable/sf1" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp"
                        android:text="일상 속 친환경"
                        android:textSize="25dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="- 분리수거? 분리배출"
                        android:textSize="15dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/rectangle_all_corner_radius"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="350dp"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center"
                    android:src="@drawable/sf1" />

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="350dp"
                    android:layout_gravity="center"
                    android:src="@drawable/sf2" />

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="350dp"
                    android:layout_gravity="center"
                    android:src="@drawable/sf3" />

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="350dp"
                    android:layout_gravity="center"
                    android:src="@drawable/sf4" />

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="350dp"
                    android:layout_gravity="center"
                    android:src="@drawable/sf5" />

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="350dp"
                    android:layout_marginBottom="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/sf6" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
</LinearLayout>

